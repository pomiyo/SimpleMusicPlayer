<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:right="-5dp" android:left="-5dp" android:top="-5dp" android:bottom="-5dp" android:drawable="@drawable/next_icon"/>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <layer-list>
            <item android:drawable="@drawable/next_icon"/>
        </layer-list>
    </item>
</selector>